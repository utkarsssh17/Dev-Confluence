<div class="login-form-container">
  <div class="tech-theme-image">
    <img src="/public/images/tech3.png" class="card-img-top" alt="Event Theme">
  </div>
  <div class="custom-login-card-container login-card">
    <div class="custom-card-main-container">
      <div class="custom-card-section-container is-active" id="about">
        <div class="custom-card-content-container">
          <div class="custom-card-subtitle-container">LOGIN</div>
          <div class="spacer5"></div>
            {{#if errorMessage}}
            <div class="alert alert-danger">{{errorMessage}}</div>
            {{/if}}
            <form id="login-form" action="/auth/login" method="POST">
              <div class="form-group">
                <label for="username">Username or Email:</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="abc@example.com"
                  value="{{username}}" required />
              </div>
              <div class="spacer5"></div>
              <div class="form-group">
                <label for="password">Password:</label>
                <div class="input-group">
                  <input type="password" class="form-control" id="password" name="password" placeholder="*********"
                    required />
                  <div class="input-group-append">
                    <button class="btn btn-outline-secondary toggle-password" aria-label="password visibility" type="button" onclick="togglePassword()">
                      <i class="fa fa-eye-slash fa-lg"></i>
                    </button>
                  </div>
                </div>
              </div>
              <div class="mb-3"></div>
              <div class="text-center">
                <button type="submit" class="logout-button text-center">Login</button>
                <div class="divider"></div>
                <a class="logout-invert text-center" href="/auth/google">Login with Google</a>
              </div>
              <p class="mt-3 text-center">Don't have an account?
                <a class="custom-anchor" href="/auth/register">Register</a>
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>